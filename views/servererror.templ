package views

templ ServerError(cfg SiteConfig) {
	<!DOCTYPE html>
	<html lang="en">
		@HeadWithMeta(cfg, PageMeta{
			Title:       "Server Error â€” " + cfg.Name,
			Description: "Something went wrong on our end.",
			OGType:      "website",
		})
		<body class="bg-white dark:bg-neutral-900 text-ink dark:text-white antialiased">
			@Nav(cfg)
			<div class="pt-20"></div>
			<main class="flex min-h-[60vh] items-center justify-center px-4 py-16">
				<div class="mx-auto flex max-w-md flex-col items-center gap-4 text-center">
